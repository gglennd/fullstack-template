{
  "name": "@gglennd/api",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.6.5",
  "scripts": {
    "dev": "tsx --env-file=.env --watch src/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "build": "tsc -b && tsc-alias"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "better-auth": "^1.3.7",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.4",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@gglennd/eslint-config": "workspace:^",
    "@types/node": "^24.3.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.33.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
